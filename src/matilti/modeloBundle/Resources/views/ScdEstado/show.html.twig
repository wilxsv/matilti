  <header>
   <h3 class="tabs_involved">Listado de estados</h3>
   <ul class="tabs">
    <li><a href="#tab1">Primeros</a></li>
    <li><a href="#tab2">Ultimos</a></li>
   </ul>
  </header>
  <div class="tab_container">
   <div id="tab1" class="tab_content">
    <table class="tablesorter" cellspacing="0">
     <thead>
      <tr>
       <th></th>
       <th>Nombre</th>
       <th>Detalle</th>
       <th>Acciones</th>
      </tr>
     </thead>
     <tbody>
      {% for item in pager.getResults %}
       <tr>
        <td><input type="checkbox"></td>
        <td>{{ item.nombreestado }}</td>
        <td>{{ item.detalleestado }}</td>
        <td>
         <input type="image" src="{{ asset('images/template/icn_edit.png') }}" title="Editar" onclick="editar('{{ path('admin_estado_edit', { 'id': item.id }) }}', '#form')"/>
         <input type="image" src="{{ asset('images/template/icn_trash.png') }}" title="Borrar" onclick="borrar('{{ path('admin_estado_delete', { 'id': item.id }) }}', '#listado')"/>
        </td>
       </tr>
      {% endfor %}
     </tbody>
    </table>
    {% if pager.isPaginable %}
     {{ paginate(pager,"admin_estado") }}
    {% endif %}
   </div><!-- end of #tab1 -->
   <div id="tab2" class="tab_content">
  </div><!-- end of #tab2 -->
 </div><!-- end of .tab_container -->
